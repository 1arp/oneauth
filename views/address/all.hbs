{{> error-snippet}}

<div class="row no-gutters work-area">
  {{> side-nav}}
  <div class="col-9 py-5 work-area__main-area">
    <div class="row no-gutters align-items-center justify-content-between">
      <div class="col-4">
        <div class="tab-nav-underline w-100 justify-content-start">
          <div class="tab active px-0 font-md extra-bold">My Addresses</div>
        </div>
      </div>
      <a href="/address/add" class="button-solid lg">Add Address</a>
    </div>

    <div class="row mt-5">
      {{#each addresses as |address index|}}
        <div class="col-6 mb-5">
          <div class="border-card p-5 position-relative">
            <h6 class="bold card-tag salmon pr-2">
              {{address.label}}
            </h6>
            <h5 class="bold mb-3">{{address.first_name}} {{address.last_name}}</h5>
            <div>
              <i class="far fa-envelope fa-lg"></i>
              <span class="pl-3">{{address.email}}</span>
            </div>
            <div class="mt-3">
              <i class="fas fa-phone fa-lg"></i>
              <span class="pl-3">{{address.mobile_number}}</span>
            </div>
            <div class="my-4 grey">
              {{address.street_address}} Near {{address.landmark}}, {{address.city}}<br> {{address.state.name}}: {{address.pincode}}
              <br>{{address.country.name}}
            </div>
            <div class="semi-bold">
              <a href="#" class="salmon">Edit Address</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
