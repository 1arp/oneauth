
{{!< centercolumn}}

<div class="offset-md-4 col-md-8 c-client-add">
    <div class="card">
        <h1 class="heading-u-red">Add New Admin for {{organisation.name}}</h1>
        <div class="attributes d-flex flex-column">
            <form method="post" action="/api/organisations/{{organisation.id}}/add_admin">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                {{> error-snippet}}
                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-2">Name</div>
                    <select name="userId" class="input-text col-9">
                        {{#each users}}
                              <option class="dropdown-li" value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="row justify-content-end">
                    <div class="button-solid">
                        <button type="submit">ADD Admin</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>