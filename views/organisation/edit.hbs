{{!< centercolumn}}

<div class="offset-md-4 col-md-8 c-client-add">
    <div class="card">
        <h1 class="heading-u-red">Edit Details for {{organisation.name}}</h1>
        <div class="attributes d-flex flex-column">
            <form method="post" action="/api/organisations/edit/{{organisation.id}}">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                {{> error-snippet}}
                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Org Name</div>
                        <input type="text" class="input-text col-8" placeholder="(e.g Nagarro)" name="name" value="{{organisation.name}}"/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Full Name</div>
                        <input type="text" class="input-text col-8" placeholder="(e.g Nagarro Software Pvt. Ltd.)" name="full_name" value="{{organisation.full_name}}"/>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Domain</div>
                        <input type="text" class="input-text col-8" placeholder="Domains" name="domain" value="{{organisation.domain}}"/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Website</div>
                        <input type="text" class="input-text col-8" placeholder="Website URL" name="website" value="{{organisation.website}}"/>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="button-solid">
                        <button type="submit">SAVE CHANGES</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>