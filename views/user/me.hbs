{{!< centercolumn}}

<h2 class="text-center thin-font custom-h2">
    My Profile &nbsp;&nbsp;
    <a href="/users/me/edit"><i class="fa fa-edit"></i></a>
</h2>
<div id="profile-row-photo" class="mt-3 pl-5 pr-5">
    <div class="text-center">
        {{#if user.photo}}
          <img class="img-thumbnail custom-profile-image" src="{{user.photo}}">
        {{else}}
          <img class="img-thumbnail custom-profile-image" src="https://robohash.org/{{user.id}}/?set=set4">
        {{/if}}
    </div>
</div>

<div class="container mt-3">
<div class="profile-parent-row">
    <div id="profile-row-id" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> CodingBlocks Account: </p> <p class="custom-profile-padding"> {{user.id}} </p>
    </div>
    <div id="profile-row-username" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Username: </p> <p class="custom-profile-padding"> {{user.username}} </p>
    </div>
    <div id="profile-row-firstname" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Firstname: </p> <p class="custom-profile-padding"> {{user.firstname}} </p>
    </div>
    <div id="profile-row-lastname" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Lastname: </p> <p class="custom-profile-padding"> {{user.lastname}} </p>
    </div>
    <div id="profile-row-email" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Email: </p> <p class="custom-profile-padding"> <a href="mailto:{{user.email}}">{{user.email}}</a> </p>
    </div>
    <div id="profile-row-role" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Role@CB: </p> <p class="custom-profile-padding"> {{user.role}} </p>
    </div>
    {{#if user.userfacebook}}
    <div id="profile-row-fb" class="profile-row">
        <p class="font-weight-bold custom-profile-padding"> Facebook </p>
        <p class="custom-profile-padding"><span class="hidden-md-down">Connected to</span>
            <a target="_blank" href="http://facebook.com/{{user.userfacebook.id}}">
            {{user.userfacebook.id}}
            </a>
            <a href="/disconnect/facebook" title="Disconnect Facebook"><i class="fa fa-times" aria-hidden="true"></i></a>
        </p>
    </div>
    {{/if}}
    {{#if user.usertwitter}}
        <div id="profile-row-twitter" class="profile-row">
            <p class="font-weight-bold custom-profile-padding"> Twitter </p>
            <p class="custom-profile-padding"> <span class="hidden-md-down">Connected to</span>
                <a target="_blank" href="http://twitter.com/{{user.usertwitter.username}}">
                {{user.usertwitter.username}}
                </a>
                <a href="/disconnect/twitter" title="Disconnect Twitter"><i class="fa fa-times" aria-hidden="true"></i></a>
            </p>
        </div>
    {{/if}}
    {{#if user.usergithub}}
        <div id="profile-row-github" class="profile-row">
            <p class="font-weight-bold custom-profile-padding"> Github </p>
            <p class="custom-profile-padding"> <span class="hidden-md-down">Connected to</span>
                <a target="_blank" href="http://github.com/{{user.usergithub.username}}">
                    {{user.usergithub.username}}
                </a>
                <a href="/disconnect/github" title="Disconnect Github"><i class="fa fa-times" aria-hidden="true"></i></a>
            </p>
        </div>
    {{/if}}
</div>
</div>



<div class="row">
    <div class="social-btn-wrapper col-md-12">
        {{#unless user.userfacebook}}
            <a class="btn text-white custom-social-btn btn-facebook mt-2 mr-1" href="/connect/facebook">
                <span class="fa fa-facebook"></span> Connect Facebook
            </a>
        {{/unless}}

        {{#unless user.usertwitter}}
            <a class="btn text-white custom-social-btn btn-twitter mt-2" href="/connect/twitter">
                <span class="fa fa-twitter"></span> Connect Twitter
            </a>
        {{/unless}}

        {{#unless user.usergithub}}
            <a class="btn text-white custom-social-btn btn-github ml-1 mt-2" href="/connect/github">
                <span class="fa fa-github"></span> Connect Github
            </a>
        {{/unless}}
    </div>
</div>
{{#unless user.isemailverified}}
<div class="row verifyemail-row">
<form class="form-group mt-2 pl-4 pr-4" method="post" action="/verifyemail">
    {{#if messages.error}}
        <div class="alert alert-danger" role="alert">
            {{messages.error}}
        </div>
    {{/if}}
{{#if messages.info}}
<span>{{messages.info}}</span>
{{/if}}
    <p>Please enter your registered email id which you have used to buy courses.</p>
    <div class="row verifyemail-input-row">
   	 <input class="form-control fontAwesome inputvalidation" name="email" placeholder="&#xf0e0; Email" type="email" required>
   	 <input class="btn btn-primary" type="submit" value="Verify">
    </div>
</form>
</div>
{{/unless}}
