{{!< centercolumn}}
<div class="signup-head">
  <h2 class="text-center thin-font custom-h2">SIGN UP</h2>
</div>
<form class="form-group  mt-5 pl-4 pr-4" method="post" action="/signup">
    {{#if messages.error}}
        <div class="alert alert-danger" role="alert">
            {{messages.error}}
        </div>
    {{/if}}
    <input class="form-control fontAwesome inputvalidation" name="username" placeholder="&#xf007; Username" type="text" required> <br>
    <input class="form-control fontAwesome inputvalidation" name="firstname" placeholder="&#xf061; Firstname" type="text" required> <br>
    <input class="form-control fontAwesome inputvalidation" name="lastname" placeholder="&#xf061; Lastname" type="text" required> <br>
    <input class="form-control fontAwesome inputvalidation" name="email" placeholder="&#xf0e0; Email" type="email" required> <br>
    <input class="form-control fontAwesome inputvalidation" name="password" placeholder="&#xf023; Password" type="password" minlength="5" required> <br>
    <div class="row">
        <input class="btn btn-primary mx-auto" type="submit" value="Signup">
    </div>
</form>
